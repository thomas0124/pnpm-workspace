{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "outDir": "./dist",
    "declarationDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "@cloudflare/workers-types", "./worker-configuration.d.ts"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "drizzle.config.ts"],
  "exclude": ["node_modules", "dist"]
}
