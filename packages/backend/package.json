{
  "name": "@uttk/backend",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "deploy": "pnpm run deploy:production",
    "deploy:preview": "wrangler deploy --env preview",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "type-check": "tsc --noEmit",
    "check": "pnpm run type-check && pnpm run lint:check && pnpm run format:check",
    "fix": "pnpm run lint:fix && pnpm run format:fix",
    "generate-types": "wrangler types",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply ar-pamph-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply ar-pamph-db --remote"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251121.0",
    "@hono/eslint-config": "^1.0.3",
    "@types/node": "^20",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9",
    "eslint-config-prettier": "^9",
    "eslint-plugin-simple-import-sort": "^12",
    "prettier": "^3.2.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "wrangler": "^3.0.0"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.6"
  }
}
